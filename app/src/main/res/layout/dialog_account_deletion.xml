<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/gradient_orange"
    android:gravity="center">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/bosse"
        android:gravity="center"
        android:text="DELETE ACCOUNT?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/dialog_paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:fontFamily="@font/rantau"
        android:text="All of your datas will be deleted, actions cannot be undone."
        android:layout_below="@id/dialog_title"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/delete_yes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/dialog_paragraph"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="YES"
        android:gravity="center"
        android:fontFamily="@font/bosse"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/delete_no"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/dialog_paragraph"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="NO"
        android:gravity="center"
        android:fontFamily="@font/bosse"
        android:textColor="#600000"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>
