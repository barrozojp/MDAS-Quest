<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_design"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/boldreel"
        android:layout_marginTop="25dp"
        android:background="@drawable/gradient_button"
        android:text="SETTINGS"
        android:textAlignment="center"
        android:textColor="#F6F7FF"
        android:textSize="50sp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/bgmusic_onoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/gradient_lightblue"
        android:drawableLeft="@drawable/baseline_music_note_24"
        android:drawablePadding="10dp"
        android:drawableTint="#304FFE"
        android:fontFamily="@font/boldreel"
        android:padding="20dp"
        android:text="MUSIC"
        android:textColor="#00137C"
        android:textSize="40sp"
        android:checked="true"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/vibration_onoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bgmusic_onoff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_lightblue"
        android:drawableLeft="@drawable/baseline_vibration_24"
        android:drawablePadding="10dp"
        android:drawableTint="#304FFE"
        android:fontFamily="@font/boldreel"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="VIBRATION"
        android:textColor="#00137C"
        android:textSize="40sp"
        android:checked="true"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/igmusic_onoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vibration_onoff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_lightblue"
        android:drawableLeft="@drawable/baseline_music_note_24"
        android:drawablePadding="10dp"
        android:drawableTint="#304FFE"
        android:fontFamily="@font/boldreel"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="InGAME MUSIC"
        android:textColor="#00137C"
        android:textSize="40sp"
        android:checked="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/gradient_easy"
        android:fontFamily="@font/bosse"
        android:text="Export data"
        android:textColor="#003315"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>