<!-- res/drawable/nav_item_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00FFFFFF" /> <!-- Transparent background for top margin -->
                    <size android:height="5dp" /> <!-- Set height for the margin -->
                </shape>
            </item>


            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#3DBFC6" />
                    <corners android:radius="25dp" />
                    <padding android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp" />
                </shape>
            </item>


            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00FFFFFF" /> <!-- Transparent background for bottom margin -->
                    <size android:height="5dp" /> <!-- Set height for the margin -->
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <color android:color="#3DBFC6" />
    </item>
</selector>
